{
    // This file is not used in compilation. It is here just for a nice editor experience.
    "extends": "@docusaurus/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "experimentalDecorators": false,
        "types": ["docusaurus-plugin-sass"],
        "module": "esnext",
        "target": "esnext",
        "strict": true,
        "paths": {
            "@tdev-components/*": ["src/components/*"],
            "@tdev-hooks/*": ["src/hooks/*"],
            "@tdev-models/*": ["src/models/*"],
            "@tdev-stores/*": ["src/stores/*"],
            "@tdev-plugins/*": ["src/plugins/*"],
            "@tdev-api/*": ["src/api/*"],
            "@tdev/*": ["src/*"],
            "@site/*": ["./*"]
        }
    },
    "exclude": ["src/plugins/**/*.test.ts", "node_modules", "_node_modules", "dist", "build"],
    "mdx": {
        "plugins": [["remark-frontmatter", ["toml", "yaml"]], "remark-directive"]
    }
}
